---
import { siteConfig } from "../config";
---

<section
  id="hero"
  class="min-h-[90vh] flex items-center py-16 px-4 sm:px-8"
  style={`background-color: var(--color-surface-light);`}
>
  <div class="max-w-5xl mx-auto w-full flex flex-col items-center gap-8 md:flex-row md:gap-12">
    <!-- Photo -->
    <div class="hero-photo flex-shrink-0">
      <div
        class="w-52 h-52 sm:w-64 sm:h-64 md:w-72 md:h-72 rounded-full overflow-hidden border-4 shadow-xl"
        style={`border-color: var(--color-primary-light);`}
      >
        <img
          src="/profile.jpg"
          alt={siteConfig.name}
          class="w-full h-full object-cover"
          loading="eager"
        />
      </div>
    </div>

    <!-- Text -->
    <div class="text-center md:text-left flex-1">
      <h1
        class="hero-title text-4xl sm:text-5xl md:text-6xl font-bold leading-tight mb-3"
        style={`color: var(--color-primary-dark);`}
      >
        {siteConfig.name.split(" ").slice(0, 2).join(" ")}<br />
        <span style={`color: var(--color-primary);`}>{siteConfig.name.split(" ").slice(2).join(" ")}</span>
      </h1>

      <p
        class="hero-subtitle text-lg sm:text-xl font-medium mb-4"
        style={`color: var(--color-primary);`}
      >
        {siteConfig.title}
      </p>

      <p
        class="hero-tagline font-handwritten text-2xl sm:text-3xl italic mb-8"
        style={`color: var(--color-accent);`}
      >
        "{siteConfig.tagline}"
      </p>

      <!-- Stats -->
      <div class="hero-stats flex justify-center md:justify-start gap-6 sm:gap-10 mb-8">
        {siteConfig.stats.map((stat) => (
          <div class="text-center">
            <div
              class="text-2xl sm:text-3xl font-bold"
              style={`color: var(--color-accent);`}
            >
              {stat.value}
            </div>
            <div
              class="text-xs sm:text-sm mt-1"
              style={`color: var(--color-primary);`}
            >
              {stat.label}
            </div>
          </div>
        ))}
      </div>

      <!-- CTA -->
      <div class="hero-cta">
        <a
          href="#sobre-mi"
          class="inline-flex items-center gap-2 px-6 py-3 rounded-full text-white font-semibold btn-hover"
          style={`background-color: var(--color-accent);`}
        >
          Con√≥ceme
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
