---
import { siteConfig } from "../config";
---

<section
  id="hero"
  class="relative min-h-[90vh] flex items-center py-16 px-4 sm:px-8 overflow-hidden"
  style={`background: linear-gradient(135deg, var(--color-surface-light) 0%, var(--color-surface) 50%, var(--color-surface-light) 100%);`}
>
  <!-- Decorative organic blobs -->
  <div class="absolute inset-0 pointer-events-none overflow-hidden">
    <div class="hero-blob-1 absolute -top-20 -right-20 w-80 h-80 rounded-full opacity-[0.07]"
      style={`background: radial-gradient(circle, var(--color-accent) 0%, transparent 70%);`} />
    <div class="hero-blob-2 absolute -bottom-32 -left-16 w-96 h-96 rounded-full opacity-[0.06]"
      style={`background: radial-gradient(circle, var(--color-primary) 0%, transparent 70%);`} />
    <div class="hero-blob-3 absolute top-1/3 right-1/4 w-64 h-64 rounded-full opacity-[0.04]"
      style={`background: radial-gradient(circle, var(--color-primary-light) 0%, transparent 70%);`} />
  </div>

  <div class="max-w-5xl mx-auto w-full flex flex-col items-center gap-10 md:flex-row md:gap-16 relative z-10">
    <!-- Photo with artistic double ring -->
    <div class="hero-photo flex-shrink-0">
      <div class="relative">
        <!-- Outer decorative ring -->
        <div
          class="absolute -inset-3 rounded-full opacity-30"
          style={`border: 2px dashed var(--color-primary-light);`}
        />
        <!-- Brushstroke accent ring -->
        <div
          class="absolute -inset-1.5 rounded-full"
          style={`background: conic-gradient(from 45deg, var(--color-accent), var(--color-primary-light), var(--color-primary), var(--color-accent)); opacity: 0.25;`}
        />
        <!-- Photo -->
        <div
          class="relative w-52 h-52 sm:w-64 sm:h-64 md:w-80 md:h-80 rounded-full overflow-hidden border-4 shadow-2xl"
          style={`border-color: var(--color-surface-light);`}
        >
          <img
            src="/profile.jpg"
            alt={siteConfig.name}
            class="w-full h-full object-cover"
            loading="eager"
          />
        </div>
      </div>
    </div>

    <!-- Text -->
    <div class="text-center md:text-left flex-1">
      <!-- Small decorative line -->
      <div class="hero-subtitle hidden md:block mb-4">
        <div class="bar-shimmer h-0.5 w-16 rounded-full" />
      </div>

      <h1
        class="hero-title text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold leading-[1.1] mb-4"
        style={`color: var(--color-primary-dark);`}
      >
        {siteConfig.name.split(" ").slice(0, 2).join(" ")}<br />
        <span style={`color: var(--color-primary);`}>{siteConfig.name.split(" ").slice(2).join(" ")}</span>
      </h1>

      <p
        class="hero-subtitle text-base sm:text-lg md:text-xl font-medium mb-5 tracking-wide"
        style={`color: var(--color-primary);`}
      >
        {siteConfig.title}
      </p>

      <p
        class="hero-tagline font-handwritten text-2xl sm:text-3xl md:text-4xl mb-10"
        style={`color: var(--color-accent);`}
      >
        &ldquo;{siteConfig.tagline}&rdquo;
      </p>

      <!-- Stats with dividers -->
      <div class="hero-stats flex justify-center md:justify-start mb-10">
        {siteConfig.stats.map((stat, i) => (
          <div class="text-center px-5 sm:px-8" style={i > 0 ? `border-left: 1px solid var(--color-primary-light);` : ''}>
            <div
              class="text-3xl sm:text-4xl font-bold"
              style="font-family:'Cormorant Garamond',serif; color:var(--color-accent);"
            >
              {stat.value}
            </div>
            <div
              class="text-[11px] sm:text-xs mt-1 uppercase tracking-widest"
              style={`color: var(--color-primary);`}
            >
              {stat.label}
            </div>
          </div>
        ))}
      </div>

      <!-- CTA -->
      <div class="hero-cta">
        <a
          href="#sobre-mi"
          class="group inline-flex items-center gap-3 px-8 py-3.5 rounded-full text-white font-semibold shadow-lg transition-all duration-300 hover:scale-105 hover:shadow-xl"
          style={`background: linear-gradient(135deg, var(--color-accent), var(--color-primary));`}
        >
          Conoce mi historia
          <svg class="w-4 h-4 transition-transform duration-300 group-hover:translate-y-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
