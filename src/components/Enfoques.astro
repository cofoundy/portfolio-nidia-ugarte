  heart: `<svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/></svg>`,
  book: `<svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25"/></svg>`,
  pen: `<svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10"/></svg>`,
};

const gradients = [
  "linear-gradient(135deg, #D4764E, #C8946F)",
  "linear-gradient(135deg, #A0674B, #C8946F)",
  "linear-gradient(135deg, #C8946F, #D4764E)",
  "linear-gradient(135deg, #5C3A2E, #A0674B)",
];
---

<section
  id="enfoques"
  class="py-20 sm:py-28 px-4 sm:px-8"
  style={`background-color: var(--color-surface-light);`}
>
  <div class="max-w-5xl mx-auto">
    <h2
      class="reveal text-3xl sm:text-4xl md:text-5xl font-bold mb-4 text-center"
      style={`color: var(--color-primary-dark);`}
    >
      Enfoques Terap&eacute;uticos
    </h2>
    <p
      class="reveal stagger-1 text-center text-base sm:text-lg mb-4 max-w-2xl mx-auto"
      style={`color: var(--color-primary);`}
    >
      Cada persona es &uacute;nica. Por eso integro diferentes enfoques para ofrecer un acompa&ntilde;amiento genuino y personalizado.
    </p>

    <!-- Decorative center line -->
    <div class="reveal stagger-1 flex justify-center mb-14">
      <div class="bar-shimmer h-0.5 w-20 rounded-full" />
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
      {siteConfig.enfoques.map((enfoque, i) => (
        <div
          class={`reveal stagger-${i + 1} group card-hover relative p-7 sm:p-8 rounded-2xl border overflow-hidden`}
          style={`background-color: white; border-color: rgba(160,103,75,0.1);`}
        >
          <!-- Top gradient accent bar -->
          <div
            class="absolute top-0 left-0 right-0 h-1 rounded-t-2xl"
            style={`background: ${gradients[i]};`}
          />

          <!-- Icon with circle bg -->
          <div
            class="w-14 h-14 rounded-xl flex items-center justify-center mb-5 transition-transform duration-300 group-hover:scale-110 group-hover:rotate-3"
            style={`background: linear-gradient(135deg, var(--color-surface), var(--color-surface-light)); color: var(--color-accent);`}
          >
            <Fragment set:html={iconMap[enfoque.icon] || iconMap.heart} />
          </div>

          <h3
            class="text-xl sm:text-2xl font-bold mb-3"
            style={`color: var(--color-primary-dark);`}
          >
            {enfoque.title}
          </h3>
          <p
            class="text-sm sm:text-base leading-relaxed"
            style={`color: var(--color-primary);`}
          >
            {enfoque.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
