---
import { siteConfig } from "../config";
---

<section
  id="investigacion"
  class="relative py-20 sm:py-28 px-4 sm:px-8 overflow-hidden"
  style={`background-color: var(--color-surface);`}
>
  <!-- Decorative blob -->
  <div class="absolute top-10 right-0 w-64 h-64 rounded-full opacity-[0.04] pointer-events-none"
    style={`background: radial-gradient(circle, var(--color-accent) 0%, transparent 70%);`} />

  <div class="max-w-4xl mx-auto relative">
    <h2
      class="reveal text-3xl sm:text-4xl md:text-5xl font-bold mb-4 text-center"
      style={`color: var(--color-primary-dark);`}
    >
      Investigaci&oacute;n
    </h2>

    <!-- Decorative center line -->
    <div class="reveal stagger-1 flex justify-center mb-14">
      <div class="bar-shimmer h-0.5 w-20 rounded-full" />
    </div>

    {/* Main publication */}
    <div
      class="reveal stagger-1 group card-hover rounded-2xl p-7 sm:p-9 border relative overflow-hidden mb-10"
      style={`background-color: white; border-color: rgba(160,103,75,0.15);`}
    >
      {/* Gradient accent top */}
      <div
        class="absolute top-0 left-0 right-0 h-1 rounded-t-2xl"
        style={`background: linear-gradient(90deg, var(--color-accent), var(--color-primary-light), var(--color-primary));`}
      />

      <div class="flex items-start gap-3 mb-5">
        <span
          class="text-[10px] font-bold uppercase tracking-wider px-3 py-1.5 rounded-full text-white shadow-sm"
          style={`background: linear-gradient(135deg, var(--color-accent), var(--color-primary));`}
        >
          {siteConfig.publicacion.type}
        </span>
        <span
          class="text-[10px] font-bold uppercase tracking-wider px-3 py-1.5 rounded-full border"
          style={`color: var(--color-primary); border-color: var(--color-primary-light);`}
        >
          {siteConfig.publicacion.year}
        </span>
      </div>

      <h3
        class="text-xl sm:text-2xl font-bold mb-3 leading-snug"
        style="font-family:'Cormorant Garamond',serif; color:var(--color-primary-dark);"
      >
        {siteConfig.publicacion.title}
      </h3>

      <p
        class="text-sm sm:text-base mb-2 font-medium"
        style={`color: var(--color-primary);`}
      >
        {siteConfig.publicacion.institution}
      </p>

      <p
        class="text-sm leading-relaxed mb-6"
        style={`color: var(--color-primary-dark); opacity: 0.8;`}
      >
        {siteConfig.publicacion.description}
      </p>

      <a
        href={siteConfig.publicacion.link}
        target="_blank"
        rel="noopener noreferrer"
        class="group/btn inline-flex items-center gap-2 text-sm font-semibold px-6 py-2.5 rounded-full text-white shadow-md transition-all duration-300 hover:scale-105 hover:shadow-lg"
        style={`background: linear-gradient(135deg, var(--color-accent), var(--color-primary));`}
      >
        Ver en UCM
        <svg class="w-4 h-4 transition-transform duration-300 group-hover/btn:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </a>
    </div>

    {/* Dossiers */}
    {siteConfig.dossiers.length > 0 && (
      <div class="reveal stagger-2">
        <h3
          class="text-xs font-semibold uppercase tracking-[0.2em] mb-5"
          style={`color: var(--color-accent);`}
        >
          Publicaciones
        </h3>
        <div class="space-y-3">
          {siteConfig.dossiers.map((d) => (
            <div
              class="flex items-start gap-4 p-5 rounded-xl border transition-all duration-300 hover:shadow-md"
              style={`background-color: white; border-color: rgba(160,103,75,0.1);`}
            >
              <div
                class="w-8 h-8 rounded-lg flex items-center justify-center flex-shrink-0 mt-0.5"
                style={`background: var(--color-surface); color: var(--color-primary-light);`}
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m2.25 0H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
                </svg>
              </div>
              <div>
                <p
                  class="text-sm font-medium leading-snug"
                  style={`color: var(--color-primary-dark);`}
                >
                  {d.title}
                </p>
                {d.registro && (
                  <p
                    class="text-xs mt-1.5"
                    style={`color: var(--color-primary-light);`}
                  >
                    {d.registro}
                  </p>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    )}
  </div>
</section>
