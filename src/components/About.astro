---
import { siteConfig } from "../config";
---

<section
  id="sobre-mi"
  class="relative py-20 sm:py-28 px-4 sm:px-8 overflow-hidden"
  style={`background-color: var(--color-surface);`}
>
  <!-- Subtle decorative blob -->
  <div class="absolute top-0 right-0 w-72 h-72 rounded-full opacity-[0.04] pointer-events-none"
    style={`background: radial-gradient(circle, var(--color-accent) 0%, transparent 70%);`} />

  <div class="max-w-5xl mx-auto relative">
    <h2
      class="reveal text-3xl sm:text-4xl md:text-5xl font-bold mb-6 text-center leading-tight"
      style={`color: var(--color-primary-dark);`}
    >
      Donde el Arte Encuentra<br />
      <span style={`color: var(--color-accent);`}>la Sanaci&oacute;n</span>
    </h2>

    <!-- Decorative center line -->
    <div class="reveal stagger-1 flex justify-center mb-14">
      <div class="bar-shimmer h-0.5 w-20 rounded-full" />
    </div>

    <!-- Quote with decorative marks -->
    <div class="reveal stagger-1 relative text-center mb-16 max-w-3xl mx-auto">
      <!-- Large decorative quote mark -->
      <span
        class="absolute -top-8 -left-2 sm:-left-6 text-7xl sm:text-8xl leading-none font-serif select-none opacity-15"
        style={`color: var(--color-primary-light);`}
      >&ldquo;</span>
      <blockquote
        class="font-handwritten text-2xl sm:text-3xl md:text-4xl leading-relaxed quote-float"
        style={`color: var(--color-primary);`}
      >
        {siteConfig.quote.text}
      </blockquote>
      <span
        class="absolute -bottom-10 -right-2 sm:-right-6 text-7xl sm:text-8xl leading-none font-serif select-none opacity-15"
        style={`color: var(--color-primary-light);`}
      >&rdquo;</span>
    </div>

    <div class="flex flex-col gap-10 md:flex-row md:gap-16 items-start">
      <!-- Bio -->
      <div class="reveal stagger-2 flex-1">
        <p
          class="text-base sm:text-lg leading-[1.9] first-letter:text-4xl first-letter:font-bold first-letter:float-left first-letter:mr-2 first-letter:mt-1"
          style={`color: var(--color-primary-dark);`}
        >
          {siteConfig.aboutMe}
        </p>
      </div>

      <!-- Enfoques preview -->
      <div
        class="reveal stagger-3 md:w-72 flex-shrink-0 p-6 rounded-2xl border"
        style={`background-color: var(--color-surface-light); border-color: rgba(160,103,75,0.15);`}
      >
        <h3
          class="text-xs font-semibold uppercase tracking-[0.2em] mb-5"
          style={`color: var(--color-accent);`}
        >
          Enfoques Terap&eacute;uticos
        </h3>
        <ul class="space-y-3.5">
          {siteConfig.enfoques.map((enfoque) => (
            <li class="flex items-center gap-3 group">
              <span
                class="w-2.5 h-2.5 rounded-full flex-shrink-0 transition-transform duration-300 group-hover:scale-150"
                style={`background: linear-gradient(135deg, var(--color-accent), var(--color-primary));`}
              />
              <span
                class="text-sm font-medium transition-colors duration-300"
                style={`color: var(--color-primary-dark);`}
              >
                {enfoque.title}
              </span>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</section>
