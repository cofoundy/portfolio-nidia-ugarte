---
import { siteConfig } from "../config";

const categories = [
  { key: "clinica" as const, label: "Cl\u00ednica", icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 21v-8.25M15.75 21v-8.25M8.25 21v-8.25M3 9l9-6 9 6m-1.5 12V10.332A48.36 48.36 0 0012 9.75c-2.551 0-5.056.2-7.5.582V21" /></svg>`, color: "#0891B2" },
  { key: "educativa" as const, label: "Educativa", icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.26 10.147a60.436 60.436 0 00-.491 6.347A48.627 48.627 0 0112 20.904a48.627 48.627 0 018.232-4.41 60.46 60.46 0 00-.491-6.347m-15.482 0a50.57 50.57 0 00-2.658-.813A59.905 59.905 0 0112 3.493a59.902 59.902 0 0110.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.697 50.697 0 0112 13.489a50.702 50.702 0 017.74-3.342M6.75 15a.75.75 0 100-1.5.75.75 0 000 1.5zm0 0v-3.675A55.378 55.378 0 0112 8.443m-7.007 11.55A5.981 5.981 0 006.75 15.75v-1.5" /></svg>`, color: "#7C3AED" },
  { key: "internacional" as const, label: "Internacional", icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418" /></svg>`, color: "#A78BFA" },
  { key: "consultoria" as const, label: "Consultor\u00eda", icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m2.25 0H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" /></svg>`, color: "#581C87" },
];
---

<section
  id="trayectoria"
  class="relative py-20 sm:py-28 px-4 sm:px-8 overflow-hidden"
  style={`background-color: var(--color-surface);`}
>
  <!-- Decorative blob -->
  <div class="absolute bottom-0 left-0 w-80 h-80 rounded-full opacity-[0.04] pointer-events-none"
    style={`background: radial-gradient(circle, var(--color-primary) 0%, transparent 70%);`} />

  <div class="max-w-5xl mx-auto relative">
    <h2
      class="reveal text-3xl sm:text-4xl md:text-5xl font-bold mb-4 text-center"
      style={`color: var(--color-primary-dark);`}
    >
      Camino Profesional
    </h2>
    <p
      class="reveal stagger-1 text-center text-base sm:text-lg mb-4 max-w-2xl mx-auto"
      style={`color: var(--color-primary);`}
    >
      Un recorrido de m&aacute;s de 8 a&ntilde;os entre la cl&iacute;nica, la educaci&oacute;n y la arteterapia &mdash; desde Per&uacute; hasta Madrid.
    </p>

    <!-- Decorative center line -->
    <div class="reveal stagger-1 flex justify-center mb-16">
      <div class="bar-shimmer h-0.5 w-20 rounded-full" />
    </div>

    <div class="space-y-16">
      {categories.map((cat, catIdx) => {
        const items = siteConfig.trayectoria[cat.key];
        if (!items || items.length === 0) return null;
        return (
          <div class={`reveal stagger-${catIdx + 1}`}>
            {/* Category header */}
            <div class="flex items-center gap-4 mb-8">
              <div
                class="w-10 h-10 rounded-xl flex items-center justify-center flex-shrink-0"
                style={`background: ${cat.color}15; color: ${cat.color};`}
              >
                <Fragment set:html={cat.icon} />
              </div>
              <h3
                class="text-lg sm:text-xl font-bold uppercase tracking-wider"
                style={`color: ${cat.color};`}
              >
                {cat.label}
              </h3>
              <div
                class="flex-1 h-px"
                style={`background: linear-gradient(to right, ${cat.color}30, transparent);`}
              />
            </div>

            {/* Timeline */}
            <div class="timeline-brushstroke space-y-8 ml-2">
              {items.map((item) => (
                <div class="timeline-node">
                  <div class="flex flex-col sm:flex-row sm:items-baseline sm:gap-3 mb-2">
                    <h4
                      class="text-lg font-bold"
                      style={`color: var(--color-primary-dark);`}
                    >
                      {item.institution}
                    </h4>
                    <div class="flex items-center gap-2 mt-0.5 sm:mt-0">
                      <span
                        class="text-xs px-2.5 py-0.5 rounded-full"
                        style={`background-color: var(--color-surface-light); color: var(--color-primary);`}
                      >
                        {item.role}
                      </span>
                      <span
                        class="text-xs font-medium"
                        style={`color: var(--color-primary-light);`}
                      >
                        {item.period}
                      </span>
                    </div>
                  </div>
                  <ul class="space-y-1.5 mt-2">
                    {item.highlights.map((h) => (
                      <li class="flex items-start gap-2.5 text-sm sm:text-base" style={`color: var(--color-primary-dark);`}>
                        <span
                          class="w-1.5 h-1.5 rounded-full mt-2 flex-shrink-0"
                          style={`background: linear-gradient(135deg, var(--color-accent), var(--color-primary-light));`}
                        />
                        {h}
                      </li>
                    ))}
                  </ul>
                </div>
              ))}
            </div>
          </div>
        );
      })}
    </div>
  </div>
</section>
